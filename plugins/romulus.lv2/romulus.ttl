@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix midi:  <http://lv2plug.in/ns/ext/midi#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix urid:  <http://lv2plug.in/ns/ext/urid#> .
@prefix time:  <http://lv2plug.in/ns/ext/time#> .

<http://github.com/lbovet/romulus>
    a lv2:Plugin ,
        lv2:MidiPlugin ;
    doap:name "Romulus Midi Looper" ;
    doap:license <https://opensource.org/licenses/ISC> ;
    lv2:project <http://github.com/lbovet/romulus> ;
    lv2:requiredFeature urid:map ;
    lv2:optionalFeature lv2:hardRTCapable ;
    lv2:port [
        a lv2:InputPort ,
            atom:AtomPort ;
        atom:bufferType atom:Sequence ;
        atom:supports midi:MidiEvent ,
                      time:Position ;
        lv2:index 0 ;
        lv2:symbol "midi_in" ;
        lv2:name "MIDI In"
    ] , [
        a lv2:OutputPort ,
            atom:AtomPort ;
        atom:bufferType atom:Sequence ;
        atom:supports midi:MidiEvent ;
        lv2:index 1 ;
        lv2:symbol "midi_out" ;
        lv2:name "MIDI Out"
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 2 ;
        lv2:symbol "record_enable" ;
        lv2:name "Record Enable" ;
        lv2:default 1.0 ;
        lv2:minimum 0.0 ;
        lv2:maximum 1.0 ;
        lv2:portProperty lv2:toggled
    ] , [
        a lv2:InputPort ,
            lv2:ControlPort ;
        lv2:index 3 ;
        lv2:symbol "loop_length" ;
        lv2:name "Loop Length (bars)" ;
        lv2:default 4.0 ;
        lv2:minimum 1.0 ;
        lv2:maximum 32.0 ;
        lv2:portProperty lv2:integer
    ] .
